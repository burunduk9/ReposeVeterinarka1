<Page x:Class="VeterinarkaProject.PageApp.AutoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VeterinarkaProject.PageApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutoPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1">
            <Label Content="autorization" FontSize="24"/>
            <Label Content="login"/>
            <TextBox x:Name="txtLog"/>
            <Label Content="password"/>
            <PasswordBox x:Name="txtPas"/>
            <Button Content="auto" x:Name="btnAuto" Click="btnAuto_Click" Height="35" Width="120" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
